<!-- views/create.html -->
<!doctype html>
<html lang="en">
  <!-- include _header.html -->
  <body>
    <main class="container">
      <h1>Add Student</h1>
      <!-- server renders form; POST to /students -->
      <form id="studentForm" method="POST" action="/students" onsubmit="return validateForm();">
        <label for="name">Full name</label>
        <input id="name" name="name" type="text" placeholder="e.g. Priya Sharma" required maxlength="100">

        <label for="age">Age</label>
        <input id="age" name="age" type="number" min="3" max="100" required>

        <label for="class">Class / Grade</label>
        <input id="class" name="className" type="text" required>

        <label for="email">Email</label>
        <input id="email" name="email" type="email">

        <div class="form-actions">
          <button class="btn" type="submit">Save</button>
          <a class="btn ghost" href="/students">Cancel</a>
        </div>
      </form>
    </main>
    <!-- include _footer.html -->
  </body>
</html>

<!-- views/edit.html -->
<!doctype html>
<html lang="en">
  <!-- include _header.html -->
  <body>
    <main class="container">
      <h1>Edit Student</h1>
      <!-- server pre-fills values from `student` -->
      <form id="studentForm" method="POST" action="/students/{{student.id}}?_method=PUT" onsubmit="return validateForm();">
        <label for="name">Full name</label>
        <input id="name" name="name" type="text" value="{{student.name}}" required maxlength="100">

        <label for="age">Age</label>
        <input id="age" name="age" type="number" value="{{student.age}}" min="3" max="100" required>

        <label for="class">Class / Grade</label>
        <input id="class" name="className" type="text" value="{{student.className}}" required>

        <label for="email">Email</label>
        <input id="email" name="email" type="email" value="{{student.email}}">

        <div class="form-actions">
          <button class="btn" type="submit">Update</button>
          <a class="btn ghost" href="/students">Cancel</a>
        </div>
      </form>
    </main>
    <!-- include _footer.html -->
  </body>
</html>

<!-- views/show.html -->
<!doctype html>
<html lang="en">
  <!-- include _header.html -->
