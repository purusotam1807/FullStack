        <dd>{{student.name}}</dd>

        <dt>Age</dt>
        <dd>{{student.age}}</dd>

        <dt>Class</dt>
        <dd>{{student.className}}</dd>

        <dt>Email</dt>
        <dd>{{student.email}}</dd>
      </dl>

      <div class="form-actions">
        <a class="btn" href="/students/{{student.id}}/edit">Edit</a>
        <a class="btn ghost" href="/students">Back</a>
      </div>
    </main>
    <!-- include _footer.html -->
  </body>
</html>

