<!-- public/js/main.js -->
// Basic client-side validation + footer year + delete confirm
(function(){
  function ready(fn){ if(document.readyState!='loading')fn(); else document.addEventListener('DOMContentLoaded',fn); }

  ready(function(){
    var yearEl = document.getElementById('year'); if(yearEl) yearEl.textContent = new Date().getFullYear();
  });

  window.validateForm = function(){
    var name = document.getElementById('name');
    var age = document.getElementById('age');
    if(!name || !age) return true; // no form on page
    if(name.value.trim().length < 2){ alert('Please enter a valid name (at least 2 characters).'); name.focus(); return false; }
    var a = parseInt(age.value,10);
    if(Number.isNaN(a) || a < 3 || a > 100){ alert('Please enter a valid age between 3 and 100.'); age.focus(); return false; }
    return true;
  }

  window.confirmDelete = function(){
    return confirm('Delete this student? This action cannot be undone.');
  }
})();
